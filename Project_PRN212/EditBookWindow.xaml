<Window x:Class="PRN212_Assignment.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Edit Book Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBox Name="tbBookName" Margin="0,0,0,10"/>
            <TextBlock Text="Author:" FontWeight="Bold"/>
            <ComboBox Name="cmbAuthor" DisplayMemberPath="AuthorName" SelectedValuePath="AuthorId" Margin="0,0,0,10"/>
            <TextBlock Text="Genre:" FontWeight="Bold"/>
            <ComboBox Name="cmbGenre" DisplayMemberPath="GenreName" SelectedValuePath="GenreId" Margin="0,0,0,10"/>
            <TextBlock Text="Quantity:" FontWeight="Bold"/>
            <TextBox Name="tbBookQuantity" Margin="0,0,0,10"/>
            <TextBlock Text="Price Input:" FontWeight="Bold"/>
            <TextBox Name="tbBookPriceIn" Margin="0,0,0,10"/>
            <TextBlock Text="Price Output:" FontWeight="Bold"/>
            <TextBox Name="tbBookPriceOut" Margin="0,0,0,10"/>
            <TextBlock Text="Book Detail:" FontWeight="Bold"/>
            <TextBox Name="tbBookDetail" Margin="0,0,0,10"/>
            <Button Content="Save" Click="SaveButton_Click" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
