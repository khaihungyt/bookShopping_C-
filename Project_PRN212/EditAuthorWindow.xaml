<Window x:Class="PRN212_Assignment.EditAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Author" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Author Details" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Author Name:" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="txtAuthorName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Width="80" Margin="0 10 10 0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="80" Margin="0 10 0 0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
